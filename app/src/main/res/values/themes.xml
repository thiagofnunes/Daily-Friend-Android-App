<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyFriend" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/clicked_green</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="Theme.DailyFriend.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DailyFriend.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DailyFriend.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="font_style">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6 </item>

    </style>
</resources>